<view class="">
  <view class="weui-form__control-area" style="margin-top: 0rpx; margin-bottom: 25rpx">
    <view class="weui-cells__group weui-cells__group_form">
      <view class="weui-cells weui-cells_form">
        <view class="weui-cell weui-cell_active" style="padding: 16px">
          <view class="weui-cell__hd" style="width: 5em"><label class="weui-label">单位名称</label></view>
          <view class="weui-cell__bd">
            <input class="weui-input" bindinput="_zsdw_input" value="{{zsdw_name}}" placeholder="单位名称" placeholder-class="weui-input__placeholder" />
          </view>
        </view>
        <view class="weui-cell weui-cell_active" style="padding: 16px">
          <view class="weui-cell__hd" style="width: 5em">							
                          <label class="weui-label">检测地点</label>
                      </view>
          <view class="weui-cell__bd">
            <input class="weui-input" bindinput="_addr_input" value="{{test_addr}}" placeholder="检测地点" placeholder-class="weui-input__placeholder" />
          </view>
        </view>
      </view>
    </view>
  </view>
  <a class="weui-btn weui-btn_primary"  style="margin-bottom:25rpx" bindtap="_save">保 存</a>
</view>
